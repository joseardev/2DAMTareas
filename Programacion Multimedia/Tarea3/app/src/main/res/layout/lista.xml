<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190dp">


    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginStart="6dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre:"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTelefonolabewl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.205" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Nombre"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTelefono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvTelefonolabewl"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginStart="6dp"
        android:ems="10"
        android:inputType=""
        android:text="Telefono:"

        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/tvTelefono"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <TextView
        android:id="@+id/tvTelefono"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNombre"
        tools:text="Telefono" />

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="98dp"
        android:layout_height="38dp"
        android:layout_marginStart="6dp"
        android:text="Fecha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTelefono"
        app:layout_constraintVertical_bias="0.196" />

    <TextView
        android:id="@+id/tvHora"
        android:layout_width="159dp"
        android:layout_height="38dp"
        android:text="Hora"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toEndOf="@+id/tvFecha"
        app:layout_constraintTop_toBottomOf="@+id/tvTelefono"
        app:layout_constraintVertical_bias="0.187" />

    <TextView
        android:id="@+id/tvAsunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="Asunto"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHora" />

    <Button
        android:id="@+id/btEliminar"
        android:layout_width="51dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/delete_rd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAsunto"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>